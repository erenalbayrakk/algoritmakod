#include <stdio.h>
#include <stdlib.h>

int main()
{
    int num, i, *ptr, sum = 0;

    printf("elemanlarÄ± giriniz: ");
    scanf("%d", &num);

    ptr = (int*) malloc(num * sizeof(int));  
    if(ptr == NULL)                     
    {
        printf(".");
        exit(0);
    }

    printf(Arrayleri giriniz: ");
    for(i = 0; i < num; ++i)
    {
        scanf("%d", ptr + i);
        sum += *(ptr + i);
    }

    printf("Sum = %d", sum);
    free(ptr);
    return 0;
}
